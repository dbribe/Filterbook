{
    "manifest_version": 2,

    "name": "Gridbook",
    "description": "Facebook extension",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "matches": [
            "http://www.facebook.com/*",
            "https://www.facebook.com/*",
            "http://facebook.com/*",
            "https://facebook.com/*"
        ],
        "js": ["page.js"]
    }],
    "externally_connectable": {
        "matches": [
            "http://facebook.com/",
            "https://facebook.com/"
        ]
    },
    "web_accessible_resources": [
        "page.html"
    ]
}
