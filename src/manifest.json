{
    "manifest_version": 2,

    "name": "Filterbook",
    "description": "Facebook extension",
    "version": "1.0.2",

    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ],
    "content_scripts": [{
        "matches": [
            "http://www.facebook.com/*",
            "https://www.facebook.com/*",
            "http://facebook.com/*",
            "https://facebook.com/*"
        ],
        "js": ["page.js"]
    }],
    "externally_connectable": {
        "matches": [
            "http://facebook.com/",
            "https://facebook.com/"
        ]
    },
    "web_accessible_resources": [
        "page.html"
    ]
}
